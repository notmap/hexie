


.progress {
	width: 100%;
	height: 400rpx;
	background-color: green;
}

.progress-bar {
	padding: 50rpx;
	background-color: #eee;
	background-color: red;
	height: 26rpx;
}

.progress-dot {
	display: block;
	float: left;
	background-color: #fff;
	width: 14rpx;
	height: 14rpx;
	border: 6rpx solid #ffd300;
	border-radius: 100%;
	position: relative;
	margin: 0 68rpx;
}

.progress-line:after {
	content: "";
	width: 134rpx;
	height: 2rpx;
	background-color: #ddd;
	position: absolute;
	top: 6rpx;
	right: 20rpx;
}

/*--------------------------------info--------------------------------*/


.info-unti {
	display: flex;
	margin-bottom: 2rpx;
	background-color: white;
}

.info-left {
	flex: 1;
	display: block;
	padding: 30rpx 30rpx;
	font-size: 28rpx;
	line-height: 40rpx;
}

.info-right {
	flex: 2;
	display: block;
	padding: 30rpx 30rpx;
	margin-bottom: 2rpx;
	font-size: 24rpx;
	line-height: 40rpx;
	text-align: right;
}



