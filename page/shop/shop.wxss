.header {
	position: relative;
	background: #ffd300;
	padding: 10rpx 40rpx 0 40rpx;
	color: #000;
	-webkit-transition: all 0.6s ease-in-out;
}
.header.hidden {
	margin-top: -290rpx;
}
.header .logo {
	float: left;
	width: 160rpx;
	height: 160rpx;
	border-radius: 4%;
	margin-right: 20rpx;
}
.header .name {
	padding-top: 20rpx;
	font-size: 36rpx;
	font-weight: bold;
	line-height: 36rpx;
	/*background-color: red;*/
}
.header .express {
	padding-top: 20rpx;
	color: #000;
	font-size: 24rpx;
	line-height: 24rpx;
	/*background-color: red;*/
}
.header .welcome {
	padding-top: 30rpx;
	color: #000;
	font-size: 24rpx;
	line-height: 24rpx;
	/*background-color: red;*/
}
.header .promotion {
	padding: 50rpx 0 30rpx 50rpx;
	color: #000;
	font-size: 24rpx;
	line-height: 24rpx;
	position: relative;
	/*background-color: red;*/
}
.header .promotion:after {
	content: "å‡";
	padding: 0 4rpx;
	line-height: 30rpx;
	color: white;
	height: 30rpx;
	background-color: #f07373;
	position: absolute;
	top: 46rpx;
	left: 0;
}
.header .shopinfo {
	width:100rpx;
	height:100%;
	/*background-color: red;*/
	position: absolute;
	top: 0;
	right: 0;
}
.header .shopinfo:after {
	content: ">";
	font-weight: bold;
	position:absolute;
	top: 60rpx;
	right: 40rpx;
}

.tab {
	height: 80rpx;
	line-height: 80rpx;
	font-size: 28rpx;
	background-color: white;
	display: flex;
	position: relative;
}

.tab:after {
	content: "";
	position: absolute;
	bottom: 0;
	left: 100rpx;
	width: 175rpx;
	height: 6rpx;
	background-color: #ffd300;
}

.tab text{
	flex: 1;
	text-align: center;
}

.comment {
	height: 100%;
	background-color: blue;
}

.main {
	display: -webkit-flex;
	height: 100%;
	box-sizing: border-box;
}

.main .classify {
	width: 180rpx;
	background: #efefef;
	height: 100%;
}
.main .classify .list {
	padding: 50rpx 30rpx;
	text-align: center;
	/*border-bottom: 1px dashed #aaa;*/
}
.main .classify .list.active {
	background: #fff;
}
.main .classify .list .name {
	display: inline-block;
	font-size: 30rpx;
	color: #646464;
	line-height: 1.2;
	text-align: left;
	pointer-events: none;
}

.main .goods {
	-webkit-flex: 1;
	background: #ffffff;
	height: 100%;
}
.main .goods .section {
	padding-bottom: 50rpx;
	border-bottom: 2rpx solid #f7f7f7;
}
.main .goods .section .title {
	padding: 20rpx 25rpx;
	color: #646464;
	font-size: 30rpx;
	line-height: 30rpx;
	position: relative;
	/*background-color: blue;*/
}
.main .goods .section .title:after {
	content: "";
	width: 4rpx;
	height: 28rpx;
	background-color: #ffd300;
	position: absolute;
	top: 20rpx;
	left: 0;
}
.main .goods .section .list {
	height: 134rpx;
	position: relative;
	padding: 20rpx 30rpx;
	font-size: 36rpx;
	line-height: 40rpx;
}
.main .goods .section .list .pic {
	float: left;
	width: 124rpx;
	height: 124rpx;
	margin-right: 20rpx;
}
.main .goods .section .list .name {
	color: #000;
	font-size: 30rpx;
	font-weight: bold;
	line-height: 30rpx;
	padding-top: 20rpx;
}
.main .goods .section .list .price {
	color: #f45044;
	font-size: 36rpx;
	line-height: 36rpx;
	padding-top: 30rpx;
	/*background-color: red;*/
}
.main .goods .section .list .addCart {
	position: absolute;
	right: 30rpx;
	bottom: 30rpx;
	width: 60rpx;
	height: 60rpx;
	background: #ffd300;
	border-radius: 50%;
}
.main .goods .section .list .addCart:after {
	content:"";
	position: absolute;
	top: 28rpx;
	left: 20rpx;
	width: 20rpx;
	height: 4rpx;
	background-color: #4a4a4c;
}
.main .goods .section .list .addCart:before {
	content:"";
	position: absolute;
	top: 20rpx;
	left: 28rpx;
	width: 4rpx;
	height: 20rpx;
	background-color: #4a4a4c;
}


.cart, .cart .mask {
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
}
.cart .mask {
	background: rgba(0,0,0,0.7);
}
.cart .list {
	position: absolute;
	left: 0;
	bottom: 100rpx;
	width: 100%;
	background: #f7f7f7;
	padding: 30rpx 0;
}
.cart .list .item {
	display: -webkit-flex;
	color: #000;
	font-size: 36rpx;
	line-height: 50rpx;
	padding: 20rpx 40rpx;
}
.cart .list .item .name {
	-webkit-flex: 1;
}
.cart .list .item .total {
	width: 120rpx;
}
.cart .list .item .reduce, .cart .list .item .add {
	font-size: 50rpx;
	background: #feb70f;
	width: 50rpx;
	height: 50rpx;
	text-align: center;
	border-radius: 50%;
}
.cart .list .item .num {
	width: 50rpx;
	text-align: center;
	margin: 0 5rpx;
}


.bottom {
	display: -webkit-flex;
	position: absolute;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 100rpx;
	background-color: #4a4a4c;
}
.bottom .data {
	-webkit-flex: 1;
}
.bottom .data .icon {
	position: absolute;
	left: 40rpx;
	top: -20rpx;
	width: 100rpx;
	height: 100rpx;
	background: #ffd300;
	border-radius: 50%;
	border: 10rpx solid #4a4a4c;
}
.bottom .data .icon image {
	position: absolute;
	left: 15rpx;
	top: 15rpx;
	width: 70rpx;
	height: 70rpx;
}
.bottom .data .icon .count {
	position: absolute;
	left: 70rpx;
	top: -10rpx;
	font-size: 30rpx;
	line-height: 40rpx;
	padding: 0 12rpx;
	color: #fff;
	background: #f45044;
	border-radius: 100rpx;
}
.bottom .data .total {
	color: #cccccc;
	font-size: 36rpx;
	line-height: 100rpx;
	padding-left: 180rpx;
}
.bottom .submit.disabled {
	width: 200rpx;
	height: 100rpx;
	font-size: 30rpx;
	line-height: 100rpx;
	background: #404040;
	color: #999999;
}
.bottom .submit {
	width: 200rpx;
	height: 100rpx;
	font-size: 30rpx;
	line-height: 100rpx;
	background: #ffd300;
	color: #fff;
}
